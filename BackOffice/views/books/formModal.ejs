<div class="fixed top-0 left-0 right-0 z-50 hidden w-full overflow-x-hidden overflow-y-auto md:inset-0 h-modal md:h-full justify-center items-center micromodal-slide"
    id="bookModal" aria-hidden="true">
    <div class="modal__overlay" tabindex="-1">
        <div class="relative w-full h-full max-w-4xl p-4 md:h-auto">
            <div class="relative bg-white rounded-lg shadow dark:bg-gray-700">
                <header
                    class="modal__header flex items-start justify-between p-4 border-b rounded-t dark:border-gray-600">
                    <h3 id="bookModal-title" class="text-xl font-semibold text-gray-900 dark:text-white">Create Book
                    </h3>
                    <button type="button"
                        class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm p-1.5 ml-auto inline-flex items-center dark:hover:bg-gray-600 dark:hover:text-white"
                        aria-label="Close modal" data-micromodal-close>
                        <svg class="w-5 h-5 pointer-events-none" fill="currentColor" viewBox="0 0 20 20"
                            xmlns="http://www.w3.org/2000/svg">
                            <path fill-rule="evenodd"
                                d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z"
                                clip-rule="evenodd"></path>
                        </svg>
                    </button>
                </header>
                <main class="modal__content" id="bookModal-content">
                    <div class="px-6 space-y-6">
                        <input type="hidden" name="_idSaveData" id="_idSaveData">
                        <div class="mt-4">
                            <div class="w-full flex flex-col mb-2" id="errorsSectionSaveData">

                            </div>
                            <div class="w-full flex mb-4" id="apiSearchDiv">
                                <div class="form-check flex item-center">
                                    <input
                                        class="form-check-input appearance-none h-4 w-4 border border-gray-300 rounded-sm bg-white checked:bg-orange-600 checked:border-orange-600 focus:ring-0 focus:outline-none focus:ring-orange-300 transition duration-200 mt-1 align-top bg-no-repeat bg-center bg-contain float-left mr-2 cursor-pointer"
                                        type="checkbox" value="" id="apiSearchStatus">
                                    <label class="form-check-label inline-block text-gray-800" for="flexCheckDefault">
                                        OpenLibrary API Search
                                    </label>
                                </div>
                            </div>

                            <div class="flex flex-wrap -mx-2 space-y-4 md:space-y-0">
                                <input type="hidden" name="apicover" id="apicover">
                                <div class="flex w-full px-2 md:w-1/2">
                                    <span
                                        class="inline-flex items-center px-3 text-sm text-gray-900 bg-gray-200 rounded-l-md border border-r-0 border-gray-300">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none"
                                            viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                            <path stroke-linecap="round" stroke-linejoin="round"
                                                d="M16 4v12l-4-2-4 2V4M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                                        </svg>
                                    </span>
                                    <input type="text" name="title" id="title"
                                        class="rounded-none rounded-r-lg border border-gray-300 text-gray-900 focus:outline-none focus:ring-orange-500 focus:border-orange-500 block flex-1 min-w-0 w-full border-gray-300 p-2.5"
                                        placeholder="Title" />
                                </div>
                                <div class="flex w-full px-2 md:w-1/2">
                                    <span
                                        class="inline-flex items-center px-3 text-sm text-gray-900 bg-gray-200 rounded-l-md border border-r-0 border-gray-300">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none"
                                            viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                            <path stroke-linecap="round" stroke-linejoin="round"
                                                d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                                        </svg>
                                    </span>
                                    <input type="text" name="author" id="author"
                                        class="rounded-none rounded-r-lg border border-gray-300 text-gray-900 focus:outline-none focus:ring-orange-500 focus:border-orange-500 block flex-1 min-w-0 w-full border-gray-300 p-2.5"
                                        placeholder="Author" />
                                </div>
                            </div>

                            <div class="flex flex-wrap -mx-2 space-y-4 md:space-y-0 mt-4">
                                <div class="flex w-full px-2 md:w-1/2">
                                    <span
                                        class="inline-flex items-center px-3 text-sm text-gray-900 bg-gray-200 rounded-l-md border border-r-0 border-gray-300">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none"
                                            viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                            <path stroke-linecap="round" stroke-linejoin="round"
                                                d="M5 5a2 2 0 012-2h10a2 2 0 012 2v16l-7-3.5L5 21V5z" />
                                        </svg>
                                    </span>
                                    <input type="text" name="ISBN" id="ISBN"
                                        class="rounded-none rounded-r-lg border border-gray-300 text-gray-900 focus:outline-none focus:ring-orange-500 focus:border-orange-500 block flex-1 min-w-0 w-full border-gray-300 p-2.5"
                                        placeholder="ISBN" />
                                </div>
                                <div class="flex w-full px-2 md:w-1/2">
                                    <span
                                        class="inline-flex items-center px-3 text-sm text-gray-900 bg-gray-200 rounded-l-md border border-r-0 border-gray-300">

                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none"
                                            viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                            <path stroke-linecap="round" stroke-linejoin="round"
                                                d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207" />
                                        </svg>
                                    </span>
                                    <input type="text" name="editor" id="editor"
                                        class="rounded-none rounded-r-lg border border-gray-300 text-gray-900 focus:outline-none focus:ring-orange-500 focus:border-orange-500 block flex-1 min-w-0 w-full border-gray-300 p-2.5"
                                        placeholder="Editor" />
                                </div>
                            </div>

                            <div class="flex flex-wrap -mx-2 space-y-4 md:space-y-0 mt-4">
                                <div class="w-full px-2 md:w-1/2">
                                    <select name="genre" id="genre"
                                        class="form-select block w-full px-4 py-2 mt-1 text-base font-normal text-gray-700 bg-white bg-clip-padding bg-no-repeat border border-solid border-gray-300 rounded transition ease-in-out m-0 focus:text-gray-700 focus:bg-white focus:ring-orange-500 focus:border-orange-500 focus:outline-none">
                                        <option value="" disabled selected>Select book genre</option>
                                        <option value="Fantasy">Fantasy</option>
                                        <option value="Adventure">Adventure</option>
                                        <option value="Romance">Romance</option>
                                        <option value="Contemporary">Contemporary</option>
                                        <option value="Dystopian">Dystopian</option>
                                        <option value="Mystery">Mystery</option>
                                        <option value="Horror">Horror</option>
                                        <option value="Thriller">Thriller</option>
                                        <option value="Paranormal">Paranormal</option>
                                        <option value="Historical fiction">Historical fiction</option>
                                        <option value="Science Fiction">Science Fiction</option>
                                        <option value="Children's">Children's</option>
                                        <option value="Memoir">Memoir</option>
                                        <option value="Cooking">Cooking</option>
                                        <option value="Art">Art</option>
                                        <option value="Self-help / Personal">Self-help / Personal</option>
                                        <option value="Development">Development</option>
                                        <option value="Motivational">Motivational</option>
                                        <option value="Health">Health</option>
                                        <option value="History">History</option>
                                        <option value="Travel">Travel</option>
                                        <option value="Guide / How-to">Guide / How-to</option>
                                        <option value="Families & Relationships">Families & Relationships</option>
                                        <option value="Humor">Humor</option>
                                    </select>
                                </div>

                                <div class="flex w-full px-2 md:w-1/2">
                                    <span
                                        class="inline-flex items-center px-3 text-sm text-gray-900 bg-gray-200 rounded-l-md border border-r-0 border-gray-300">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none"
                                            viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                            <path stroke-linecap="round" stroke-linejoin="round"
                                                d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                                        </svg>
                                    </span>
                                    <input datepicker="" datepicker-autohide type="text" name="launch_date"
                                        id="launch_date"
                                        class="rounded-none rounded-r-lg border border-gray-300 text-gray-900 focus:outline-none focus:ring-orange-500 focus:border-orange-500 block flex-1 min-w-0 w-full border-gray-300 p-2.5"
                                        placeholder="Select date" />
                                </div>
                            </div>

                            <div class="flex flex-wrap -mx-2 space-y-4 md:space-y-0 mt-4">
                                <div class="flex w-full px-2 md:w-1/2">
                                    <span
                                        class="inline-flex items-center px-3 text-sm text-gray-900 bg-gray-200 rounded-l-md border border-r-0 border-gray-300">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none"
                                            viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                            <path stroke-linecap="round" stroke-linejoin="round"
                                                d="M3 6l3 1m0 0l-3 9a5.002 5.002 0 006.001 0M6 7l3 9M6 7l6-2m6 2l3-1m-3 1l-3 9a5.002 5.002 0 006.001 0M18 7l3 9m-3-9l-6-2m0-2v2m0 16V5m0 16H9m3 0h3" />
                                        </svg>
                                    </span>
                                    <input type="number" name="new" id="new"
                                        class="rounded-none rounded-r-lg border border-gray-300 text-gray-900 focus:outline-none focus:ring-orange-500 focus:border-orange-500 block flex-1 min-w-0 w-full border-gray-300 p-2.5"
                                        placeholder="Quantity of new books" min="0" />
                                </div>
                                <div class="flex w-full px-2 md:w-1/2">
                                    <span
                                        class="inline-flex items-center px-3 text-sm text-gray-900 bg-gray-200 rounded-l-md border border-r-0 border-gray-300">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none"
                                            viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                            <path stroke-linecap="round" stroke-linejoin="round"
                                                d="M3 6l3 1m0 0l-3 9a5.002 5.002 0 006.001 0M6 7l3 9M6 7l6-2m6 2l3-1m-3 1l-3 9a5.002 5.002 0 006.001 0M18 7l3 9m-3-9l-6-2m0-2v2m0 16V5m0 16H9m3 0h3" />
                                        </svg>
                                    </span>
                                    <input type="number" name="worn" id="worn"
                                        class="rounded-none rounded-r-lg border border-gray-300 text-gray-900 focus:outline-none focus:ring-orange-500 focus:border-orange-500 block flex-1 min-w-0 w-full border-gray-300 p-2.5"
                                        placeholder="Quantity of worn books" min="0" />
                                </div>
                            </div>

                            <div class="flex flex-wrap -mx-2 space-y-4 md:space-y-0 mt-4">
                                <div class="flex w-full px-2 md:w-1/2">
                                    <span
                                        class="inline-flex items-center px-3 text-sm text-gray-900 bg-gray-200 rounded-l-md border border-r-0 border-gray-300">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none"
                                            viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                            <path stroke-linecap="round" stroke-linejoin="round"
                                                d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
                                        </svg>
                                    </span>
                                    <input type="number" name="number_of_pages" id="number_of_pages"
                                        class="rounded-none rounded-r-lg border border-gray-300 text-gray-900 focus:outline-none focus:ring-orange-500 focus:border-orange-500 block flex-1 min-w-0 w-full border-gray-300 p-2.5"
                                        placeholder="Number of pages" min="1" />
                                </div>
                                <div class="flex w-full px-2 md:w-1/2">
                                    <span
                                        class="inline-flex items-center px-3 text-sm text-gray-900 bg-gray-200 rounded-l-md border border-r-0 border-gray-300">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none"
                                            viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                            <path stroke-linecap="round" stroke-linejoin="round"
                                                d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z" />
                                        </svg>
                                    </span>
                                    <input type="number" name="price" id="price"
                                        class="rounded-none rounded-r-lg border border-gray-300 text-gray-900 focus:outline-none focus:ring-orange-500 focus:border-orange-500 block flex-1 min-w-0 w-full border-gray-300 p-2.5"
                                        placeholder="Price" min="0" step=".01" />
                                </div>
                            </div>

                            <div class="flex flex-wrap space-y-4 md:space-y-0 mt-4">
                                <textarea name="synopsis" rows="4" id="synopsis"
                                    class="block p-2.5 w-full text-gray-900 rounded-lg border border-gray-300 focus:ring-orange-500 focus:border-orange-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-orange-500 dark:focus:border-orange-500"
                                    placeholder="Synopsis"></textarea>
                            </div>

                            <div class="flex flex-wrap space-y-4 md:space-y-0 mt-4">
                                <input
                                    class="block w-full text-sm text-gray-900 rounded-lg border border-gray-300 cursor-pointer dark:text-gray-400 focus:outline-none focus:border-transparent dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400"
                                    id="image" name="cover" type="file" />
                            </div>
                        </div>
                    </div>
                </main>
                <footer
                    class="flex justify-end items-center p-6 space-x-2 border-t border-gray-200 rounded-b dark:border-gray-600">
                    <button type="button" id="saveData"
                        class="text-white bg-orange-700 hover:bg-orange-800 focus:ring-4 focus:outline-none focus:ring-orange-300 font-medium rounded text-sm px-5 py-2.5 text-center dark:bg-orange-600 dark:hover:bg-orange-700 dark:focus:ring-orange-800">Save</button>
                    <button type="button" data-micromodal-close aria-label="Close this dialog window"
                        class="text-gray-500 bg-white hover:bg-gray-100 focus:ring-4 focus:outline-none focus:ring-orange-300 rounded border border-gray-200 text-sm font-medium px-5 py-2.5 hover:text-gray-900 focus:z-10 dark:bg-gray-700 dark:text-gray-300 dark:border-gray-500 dark:hover:text-white dark:hover:bg-gray-600 dark:focus:ring-gray-600">Cancel</button>
                </footer>
            </div>
        </div>
    </div>
</div>